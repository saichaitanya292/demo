pipeline {
    agent any

    tools {
        maven 'Maven_3.8.1' // Make sure this is configured in Jenkins -> Global Tools
        jdk 'JDK_11'        // Or change to 'JDK_17' if you're using Java 17
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/saichaitanya292/demo.git' // Replace with your repo
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Publish Test Results') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }
    }

    post {
        success {
            echo 'Build and tests ran successfully.'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}